<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/pastel_pink_bg"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_gravity="center"
            android:src="@drawable/bp_logo" />


        <TextView
            android:id="@+id/txtv"
            android:layout_width="match_parent"
            android:layout_height="82dp"
            android:layout_margin="10dp"
            android:background="@drawable/blackboarder"
            android:gravity="left"
            android:linksClickable="true"
            android:padding="20dp"
            android:text="@string/aboutus"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_gravity="left"
                android:layout_marginLeft="20sp"
                android:src="@drawable/nazmi" />


            <ImageView
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_gravity="right"
                android:layout_marginLeft="90sp"
                android:src="@drawable/mior" />

        </LinearLayout>
        <LinearLayout
            android:padding="3dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="Mohamad Nazmi Bin Hashim"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="Mior Muhammad Irfan Bin Mior Latfeet"
                android:layout_width="wrap_content"
                android:layout_marginLeft="40sp"
                android:textAlignment="center"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="80sp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_gravity="center"
                android:layout_marginLeft="20sp"
                android:src="@drawable/udy" />
            <ImageView
                android:layout_width="140dp"
                android:layout_height="140dp"

                android:layout_marginLeft="90sp"
                android:src="@drawable/aus" />

        </LinearLayout>
        <LinearLayout
            android:padding="3dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="Muhammad Rusydi Bin Rasin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="Muhammad Firdaus Bin Jamaludin"
                android:layout_width="wrap_content"
                android:layout_marginLeft="40sp"
                android:textAlignment="center"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>

</ScrollView>
